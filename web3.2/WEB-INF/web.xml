        <servlet-class>controller.SemesterAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SemesterAPIServlet</servlet-name>
        <url-pattern>/api/semesters</url-pattern>
    </servlet-mapping>
    <!-- Quản trị viên -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>controller.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminUserServlet</servlet-name>
        <servlet-class>controller.AdminUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUserServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminCourseServlet</servlet-name>
        <servlet-class>controller.AdminCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCourseServlet</servlet-name>
        <url-pattern>/admin/courses</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminReportServlet</servlet-name>
        <servlet-class>controller.AdminReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminReportServlet</servlet-name>
        <url-pattern>/admin/reports</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminAssignmentServlet</servlet-name>
        <servlet-class>controller.AdminAssignmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAssignmentServlet</servlet-name>
        <url-pattern>/admin/assignments</url-pattern>
    </servlet-mapping>
    <!-- Giảng viên -->
    <servlet>
        <servlet-name>LecturerDashboardServlet</servlet-name>
        <servlet-class>controller.LecturerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerDashboardServlet</servlet-name>
        <url-pattern>/lecturer/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LecturerCourseServlet</servlet-name>
        <servlet-class>controller.LecturerCourseServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerCourseServlet</servlet-name>
        <url-pattern>/lecturer/courses</url-pattern>
        <url-pattern>/lecturer/courses/create</url-pattern>
        <url-pattern>/lecturer/courses/edit/*</url-pattern>
        <url-pattern>/lecturer/courses/view/*</url-pattern>
        <url-pattern>/lecturer/courses/delete/*</url-pattern>
        <url-pattern>/lecturer/courses/search</url-pattern>
    </servlet-mapping>
