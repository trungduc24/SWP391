    </servlet>
    <servlet-mapping>
        <servlet-name>EnrollCourseServlet</servlet-name>
        <url-pattern>/enroll-course</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchCourseServlet</servlet-name>
        <servlet-class>controller.SearchCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchCourseServlet</servlet-name>
        <url-pattern>/search-course</url-pattern>
    </servlet-mapping>
    <!-- Quản lý học kỳ -->
    <servlet>
        <servlet-name>SemesterServlet</servlet-name>
        <servlet-class>controller.SemesterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SemesterServlet</servlet-name>
        <url-pattern>/semesters</url-pattern>
