    </servlet-mapping> -->
    <servlet>
        <servlet-name>LecturerMaterialServlet</servlet-name>
        <servlet-class>controller.LecturerMaterialServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerMaterialServlet</servlet-name>
        <url-pattern>/lecturer/materials</url-pattern>
        <url-pattern>/lecturer/materials/upload</url-pattern>
        <url-pattern>/lecturer/materials/view/*</url-pattern>
        <url-pattern>/lecturer/materials/delete/*</url-pattern>
        <url-pattern>/lecturer/materials/download/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LecturerAnnouncementServlet</servlet-name>
        <servlet-class>controller.LecturerAnnouncementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerAnnouncementServlet</servlet-name>
        <url-pattern>/lecturer/announcements</url-pattern>
        <url-pattern>/lecturer/announcements/create</url-pattern>
        <url-pattern>/lecturer/announcements/view/*</url-pattern>
        <url-pattern>/lecturer/announcements/delete/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LecturerGradeServlet</servlet-name>
        <servlet-class>controller.LecturerGradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerGradeServlet</servlet-name>
        <url-pattern>/lecturer/grades</url-pattern>
        <url-pattern>/lecturer/grades/course/*</url-pattern>
        <url-pattern>/lecturer/grades/test/*</url-pattern>
        <url-pattern>/lecturer/grades/student/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LecturerStudentServlet</servlet-name>
        <servlet-class>controller.LecturerStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerStudentServlet</servlet-name>
        <url-pattern>/lecturer/students</url-pattern>
        <url-pattern>/lecturer/students/view/*</url-pattern>
        <url-pattern>/lecturer/students/course/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LecturerProfileServlet</servlet-name>
        <servlet-class>controller.LecturerProfileServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerProfileServlet</servlet-name>
        <url-pattern>/lecturer/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LecturerForumServlet</servlet-name>
        <servlet-class>controller.LecturerForumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerForumServlet</servlet-name>
        <url-pattern>/lecturer/forums</url-pattern>
        <url-pattern>/lecturer/forums/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AssignmentServlet</servlet-name>
        <servlet-class>controller.AssignmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/assignments</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MaterialServlet</servlet-name>
        <servlet-class>controller.MaterialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaterialServlet</servlet-name>
        <url-pattern>/materials</url-pattern>
    </servlet-mapping>
    <!-- Trang mặc định -->
    <servlet-mapping>
        <servlet-name>LecturerAssignment</servlet-name>
        <url-pattern>/lecturer/assignments</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
